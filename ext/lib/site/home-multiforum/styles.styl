.ext-home-multiforum
  @import './cover/styles'
  @import './steps/styles'

  .section-title
    display: inline-block
    margin: 0 0 1em
    padding: 8px 10px
    font-size: 14px
    color: #fff
    font-weight: 400
    background-color: #f7941d

  .section-subtitle
    margin-top: 0
    font-size: 24px
    font-weight: 400
    color: #4f5353

  .info
    margin-top: 133px
    padding: 0 0 300px
    display: flex
    flex-direction: column
    align-items: center
    background-image: unquote('url("/ext/lib/site/home-multiforum/city@3x.png")')
    background-repeat: repeat-x
    background-position: bottom
    background-size: auto 200px
    position: relative
    border-top: 2px solid #d8d8d8

    &::before,
    &::after
      content: ""
      position: absolute
      width: 0
      height: 0
      border-style: solid
      border-width: 30px 30px 0 30px
      margin-right: -15px
      right: 50%

    &::before
      border-color: #d8d8d8 transparent transparent transparent
      top: 0

    &::after
      border-color: #fff transparent transparent transparent
      top: -3px

  .action
    width: 100%
    display: flex
    justify-content: center
    min-height: 559px
    padding: 50px 10px 0
    position: relative
    @media screen and (max-width: 1015px)
      min-height: 650px
    @media screen and (max-width: 500px)
      min-height: 550px
    &:nth-child(even)
      background-color: #f7f7f7
    .action-content
      max-width: 677px

    h3
      color: #3ba4ce
      margin: 9px 0
      font-size: 40px
      font-weight: 400
    h4
      color: #3ba4ce
      margin: 33px 0 26px
      font-size: 34px
      font-weight: 200
    p
      font-weight: 200
      font-size: 23px
      line-height: 30px
      margin-bottom: 50px
      color: #818181
    a
      background: #00adef
      color: #fff
      border-radius: 5px
      padding: 9px 55px
      margin: 50px 0 30px
      font-size: 21px
      font-weight: 400
      border: none
      cursor: pointer

    .action-separador
      height: 4px
      width: 255px
      display: block
      background-color: #3ba4ce
      margin-bottom: 20px

    .action-img
      min-width: 330px
      height: 330px
      margin: 50px 30px 0 0
      background-size: 200px
      background-position: 50% 50%
      background-repeat: no-repeat
      background-color: #3ba4ce
      border-radius: 50%

      @media screen and (max-width: 1015px)
        min-width: 200px
        height: 200px
        background-size: 150px

      @media screen and (max-width: 500px)
        display: none

  .action-consulta
    .action-img
      background-image: unquote("url('/ext/lib/site/home-multiforum/consulta-icono.png')")

  .action-presupuesto
    .action-img
      background-image: unquote("url('/ext/lib/site/home-multiforum/presupuesto-icono.png')")

  .action-desafio
    .action-img
      background-image: unquote("url('/ext/lib/site/home-multiforum/desafio-icono.png')")

  .action-voluntariado
    .action-img
      background-image: unquote("url('/ext/lib/site/home-multiforum/voluntariado-icono.png')")
  footer
    background: #a5a7a9
    display: inline-block
    width: 100%
    padding-top: 30px
    padding-bottom: 20px

    .disclaimer
      float: left
      margin-top: -10px
      &>*
        margin: 0
        font-size: 15px
        font-weight: 100
        color: #fff
      .spacer
        margin: 0 10px

    .footer-logos
      float: right
      display: flex

      a
        display: inline-block
        background-repeat: no-repeat
        background-size: auto 28px!important
        height: 30px
        margin-left: 20px

      .democracy
        width: 160px
        background: unquote("url('/ext/lib/site/home-multiforum/democracy-logo.png')")
        
      .rosario
        width: 130px
        background: unquote("url('/ext/lib/site/home-multiforum/rosario-logo.png')")
