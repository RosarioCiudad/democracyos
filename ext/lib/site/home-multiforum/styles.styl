.ext-home-multiforum
  .ext-home-cover
    display: flex
    align-items: center
    min-height: 70vh
    padding: 15px 0
    color: #fff
    text-align: center
    background-size: cover
    background-repeat: no-repeat
    background-position: top center
    background-image: unquote("url('/ext/lib/site/home-multiforum/bg-cover.jpg')")

    @media all and (min-width: 960px)
      background-image: unquote("url('/ext/lib/site/home-multiforum/bg-cover@2x.jpg')")

    h2
      font-size: 2em
      margin: 0 0 1em

    h1
      font-size: 3em
      margin: 0 0 1em

    .call-to-action
      background: #00adef
      color: #fff

  .intro
    background-image: unquote("url('/ext/lib/site/home-multiforum/city@3x.png')")
    background-repeat: no-repeat
    background-position: bottom
    background-size: contain
    padding: 0 0 180px
    .light-text
      margin-top 100px
      padding: 0
      list-style: none
      color: #a5a7a9
      h4
        font-size: 20px
        margin: 20px 0
        font-weight: 600
    .globos
      background-image: unquote("url('/ext/lib/site/home-multiforum/globos-text.png')")
      background-size: 80%
      background-repeat: no-repeat
      background-position: right

  .info
    background: #00adef
    color: #fff
    margin-top: -20px
    padding: 50px 0
    .col-md-6
      padding-top: 50px
    h2
      font-size: 39px
      margin: 25px 0
      font-weight: 500
    p
      font-size: 19px
      font-weight: 100
    .en-curso
      background: #f7941d
      padding: 6px 10px
      font-size: 19px
    .proyectos-stats
      margin: 0
      padding: 5px 0 10px 0
      list-style: none
      li
        text-align: center
        display: inline-block
        margin-right: 50px
        .img
          height: 74px
          background-repeat: no-repeat
          background-position: center
          background-size: auto 50px
          padding-bottom: 5px
        span
          display: block
        .num
          font-size: 26px
          font-weight: 600
        p
          font-size: 15px
      li:nth-child(1)
        .img
          background-image: unquote("url('/ext/lib/site/home-multiforum/icon-1@3x.png')")
      li:nth-child(2)
        .img
          background-image: unquote("url('/ext/lib/site/home-multiforum/icon-2@3x.png')")
      li:nth-child(3)
        .img
          background-size: auto 70px
          background-image: unquote("url('/ext/lib/site/home-multiforum/icon-3@3x.png')")
    .ver-mas
      color: #00adef
      font-weight: bold
      background: #f3f3f3
    .linea-tiempo
      display: flex
      justify-content: center
      ul
        padding: 0
        margin: 0
        list-style: none
        li
          border-left: 7px solid #fff
          padding: 40px 17px 30px
          position: relative
          &::before
            content: " "
            width: 22px
            height: 22px
            background: #fff
            position: absolute
            border-radius: 50%
            left: -15px
            top: -1px
          h4
            background: #525252
            display: inline
            padding: 5px 10px
            font-weight: 100
            position: absolute
            margin-left: 15px
            top: -29px;
            left: 20px;
            font-size: 19px
            &::before
              content: " "
              width: 0
              height: 0
              top: 6px
              left: -6px
              border-style: solid
              position: absolute
              border-width: 7px 7px 7px 0
              border-color: transparent #525252 transparent transparent
          span
            display: block
          &:last-child
            border-left: none
            margin-left: 7px
            h4
              background: #f7941d
              &::before
                border-color: transparent #f7941d transparent transparent
  footer
    background: #a5a7a9
    display: inline-block
    width: 100%
    height: 84px
    padding-top: 30px
    .disclaimer
      float: left
      margin-top: -10px
      &>*
        margin: 0
        font-size: 15px
        font-weight: 100
        color: #fff
      .spacer
        margin: 0 10px
    .footer-logos
      float: right
      display: flex
      a
        display: inline-block
        background-repeat: no-repeat
        background-size: auto 28px!important
        height: 30px
        margin-left: 20px
      .democracy
        width: 160px
        background: unquote("url('/ext/lib/site/home-multiforum/democracy-logo.png')")
      .rosario
        width: 130px
        background: unquote("url('/ext/lib/site/home-multiforum/rosario-logo.png')")
