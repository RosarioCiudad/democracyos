.ext-home-multiforum
  .section-title
    display: inline-block
    margin: 0 0 1em
    padding: 8px 10px
    font-size: 14px
    color: #fff
    font-weight: 400
    background-color: #f7941d

  .section-subtitle
    margin-top: 0
    font-size: 24px
    font-weight: 400
    color: #4f5353

  .ext-home-cover
    display: flex
    align-items: center
    min-height: 84vh
    padding: 15px 0
    color: #fff
    text-align: center
    background-size: cover
    background-repeat: no-repeat
    background-position: center center
    position: relative
    z-index: 0

    h2
      font-size: 2em
      margin: 0 0 1em
      text-shadow: 2px 2px 4px rgba(81,81,81,0.8)

    h1
      font-size: 3em
      margin: 0 0 20px
      text-shadow: 2px 2px 4px rgba(81,81,81,0.8)

    .call-to-action
      background: #00adef
      color: #fff
      border-radius: 7px
      padding: 12px 45px;
      margin-top: 22px;
      letter-spacing: 1px;
      text-transform: uppercase

    .container
      z-index: 10
      h1
        margin-top: -15px;
        letter-spacing: 1px;
      p
        margin: 45px 0 30px
        font-size: 27px
        line-height: 33px
        letter-spacing: 1px
        font-weight: 500
      span
        bottom: 15px
        left: 50%
        position: absolute
        border: 2px solid #fff
        border-radius: 50%
        font-size: 20px
        margin-left: -15px
        padding: 10px
        @media screen and (min-width: 768px)
          font-size: 40px
          margin-left: -32px
          padding: 13px 10px 7px
        @media screen and (max-width: 451px)
          display: none

    .banner
      display: none
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      align-items: center
      justify-content: center
      pointer-events: none
      z-index: 5

      @media screen and (min-width: 768px)
        display: flex

    .video
      width: 100%
      position: relative
      height: 100%
      overflow: hidden
      display: flex
      justify-content: center
      align-items: center

      video
        width: 100%
        min-width: 1000px
        z-index: -1
  .pasos
    h2
      font-weight: 400
      text-align: center
      width: 100%
      margin: 80px 0 50px
      font-size: 39px
      color: #32a7d3
      letter-spacing: 1px
    .participa-steps
      width: 100%
      display: flex
      justify-content: space-between
      padding: 0 27px
      @media screen and (max-width: 1015px)
        flex-direction: column
        .p-step
          margin-bottom: 20px
          width: 100%!important
          &::before
            content: none!important
      .p-step
        display: flex
        flex-direction: column
        align-items: center
        margin-right: 40px
        position: relative
        width: 230px
        p.p-text
          font-size: 22px
          margin-top: 16px
          line-height: 28px
          letter-spacing: 1px
          text-align: center
          color: #818181
        div
          position: relative
          .num
            color: white
            background: #3ba4ce
            padding: 8px 23px
            border-radius: 50%
            font-size: 40px
            position: absolute
            top: 10px
            left: 7px
          p
            border-radius: 50%
            border: 5px solid #f7f7f7
            color: #818181
            font-size: 40px
            font-weight: 100
            width: 225px
            height: 225px
            display: flex
            align-items: center
            justify-content: center
        &::before
          content: ''
          width: 0
          height: 0
          border-style: solid
          border-width: 20px 0 20px 40px
          border-color: transparent transparent transparent #d8d8d8
          position: absolute
          right: -60px
          top: 100px
        &:last-child
          margin-right: 0
          &::before
            content: none
  .info
    margin-top: 133px
    padding: 0 0 300px
    display: flex
    flex-direction: column
    align-items: center
    background-image: unquote("url('/ext/lib/site/home-multiforum/city@3x.png')")
    background-repeat: repeat-x
    background-position: bottom
    background-size: auto 200px
    position: relative
    border-top: 2px solid #d8d8d8
    &::before, &::after
      content: ''
      position: absolute
      width: 0
      height: 0
      border-style: solid
      border-width: 30px 30px 0 30px
      margin-right: -15px
      right: 50%
    &::before
      border-color: #d8d8d8 transparent transparent transparent
      top: 0
    &::after
      border-color: #fff transparent transparent transparent
      top: -3px
    .action
      width: 100%
      display: flex
      justify-content: center
      min-height: 559px
      padding: 50px 10px 0
      position: relative
      @media screen and (max-width: 1015px)
        min-height: 650px
      @media screen and (max-width: 500px)
        min-height: 550px
      &:nth-child(even)
        background-color: #f7f7f7
      .action-content
        max-width: 677px

      h3
        color: #3ba4ce
        margin: 9px 0
        font-size: 40px
        font-weight: 400
      h4
        color: #3ba4ce
        margin: 33px 0 26px
        font-size: 34px
        font-weight: 200
      p
        font-weight: 200
        font-size: 23px
        line-height: 30px
        margin-bottom: 50px
        color: #818181
      a
        background: #00adef
        color: #fff
        border-radius: 5px
        padding: 9px 55px
        margin: 50px 0 30px
        font-size: 21px
        font-weight: 400
        border: none
        cursor: pointer
      .action-separador
        height: 4px
        width: 255px
        display: block
        background-color: #3ba4ce
        margin-bottom: 20px
      .action-img
        min-width: 330px
        height: 330px
        margin: 50px 30px 0 0
        background-size: 200px
        background-position: 50% 50%
        background-repeat: no-repeat
        background-color: #3ba4ce
        border-radius: 50%
        @media screen and (max-width: 1015px)
          min-width: 200px
          height: 200px
          background-size: 150px
        @media screen and (max-width: 500px)
          display: none
    .action-consulta
      .action-img
        background-image: unquote("url('/ext/lib/site/home-multiforum/consulta-icono.png')")
    .action-presupuesto
      .action-img
        background-image: unquote("url('/ext/lib/site/home-multiforum/presupuesto-icono.png')")
    .action-desafio
      .action-img
        background-image: unquote("url('/ext/lib/site/home-multiforum/desafio-icono.png')")
    .action-voluntariado
      .action-img
        background-image: unquote("url('/ext/lib/site/home-multiforum/voluntariado-icono.png')")
  footer
    background: #a5a7a9
    display: inline-block
    width: 100%
    padding-top: 30px
    padding-bottom: 20px
    .disclaimer
      float: left
      margin-top: -10px
      &>*
        margin: 0
        font-size: 15px
        font-weight: 100
        color: #fff
      .spacer
        margin: 0 10px
    .footer-logos
      float: right
      display: flex
      a
        display: inline-block
        background-repeat: no-repeat
        background-size: auto 28px!important
        height: 30px
        margin-left: 20px
      .democracy
        width: 160px
        background: unquote("url('/ext/lib/site/home-multiforum/democracy-logo.png')")
      .rosario
        width: 130px
        background: unquote("url('/ext/lib/site/home-multiforum/rosario-logo.png')")
