.ext-voting-module
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  width: 100vw
  z-index: 10

  .alert
    margin: 0

  .voting-success
    color: #fff
    display: flex
    flex-direction: column
    align-items: center
    width: 100%
    padding: 30px 0
    text-align: center
    background-color: #294b68

    h1
      font-size: 24px
      margin: 0 0 15px

    a
      width: 30px
      height: 25px
      background-size: contain
      background-repeat: no-repeat
      display: inline-block
      margin: 20px 5px 0

    .fb
      background-image: unquote("url('/ext/lib/site/topic-layout/icon-facebook@3x.png')")

    .tw
      background-image: unquote("url('/ext/lib/site/topic-layout/icon-twitter@3x.png')")

    .msj
      background-image: unquote("url('/ext/lib/site/topic-layout/icon-mail@3x.png')")
