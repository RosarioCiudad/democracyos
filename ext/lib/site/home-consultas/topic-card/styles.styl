.topic-card
  display: block
  display: flex
  flex-direction: column
  z-index: 0
  position relative
  margin 15px
  width 500px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  color inherit
  background-color #fff
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')

  .topic-card-cover
    position relative
    width 100%
    border-bottom: 4px solid #00adef
    background-size cover
    background-color #efefef

    &:after
      content ''
      display block
      padding-top 50%

  .topic-info
    flex-grow: 2
    display: flex
    flex-direction: column
    padding: 15px

  .title
    margin: 0
    color: #444
    font-size: 1.5em
    font-weight: 400
    line-height: 1.1

    a
      padding-left: .3em
      font-size: .7em
      font-weight: 400
      color: #00adef

      &:hover
        color: #3dacf1
        text-decoration: underline


  .topic-card-footer
    padding-top: 20px
    align-self: flex-end
    width: 100%
    text-align: right

  .social-links
    position: absolute
    left: 15px
    bottom: 15px
    font-size: 20px

    span
      margin-right: 7px
      color: #999
