.topic-card
  display: block
  display: flex
  flex-direction: column
  z-index: 0
  position relative
  margin 15px
  width 260px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  color inherit
  cursor pointer
  background-color #fff
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')

  &:hover
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)

  .topic-card-cover
    position relative
    width 100%
    border-bottom: 4px solid #00adef
    background-size cover
    background-color #efefef

    &:after
      content ''
      display block
      padding-top 50%

  .topic-info
    flex-grow: 2
    display: flex
    flex-direction: column
    padding: 15px

  .title
    margin: 0
    color: #444
    font-weight: 400
    line-height: 1.1
    font-size: 18px

  .topic-card-footer
    padding-top: 20px
    align-self: flex-end
    width: 100%
    text-align: right

  .social-links
    position: absolute
    left: 15px
    bottom: 15px
    font-size: 20px

    span
      margin-right: 7px
      color: #999
