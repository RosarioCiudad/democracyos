.topic-card
  @import '../../../../lib/site/topic-layout/topic-article/poll/styles'

  display: block
  display: flex
  flex-direction: column
  z-index: 0
  position relative
  margin 15px
  width 500px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  color inherit
  background-color #fff
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')

  .topics-poll
    flex-grow: 2
    margin-bottom: 0

  .topic-card-cover
    position: relative
    width: 100%
    background-size: cover
    background-color: #efefef

    &:after
      content ''
      display block
      padding-top 50%

  .topic-info
    flex-grow: 2
    display: flex
    flex-direction: column
    padding: 1em 15px 15px
    border-top: 4px solid #00adef

  .title
    margin: 0 0 .8em
    color: #444
    font-size: 1.5em
    font-weight: 400
    line-height: 1.1

    a
      font-weight: inherit
      color: inherit

      &:hover
        text-decoration: none

  .topic-card-footer-container
    width: 100%
    align-self: flex-end

  .topic-card-footer
    display: flex
    flex-wrap: wrap
    font-size: .9em
    padding-top: .8em
    width: 100%
    color: #a5a9aa
    border-top: 1px solid #ddd

    & > div
      display: inline-block
      margin-right: 1em

    [class*="icon-"]
      position: relative
      top: 1px

    a
      color: #00adef
      font-weight: 400

      &:hover
        color: #3dacf1

    .comments
      margin-right: 0
      margin-left: auto

  .social-links
    position: absolute
    left: 15px
    bottom: 15px
    font-size: 20px

    span
      margin-right: 7px
      color: #999
