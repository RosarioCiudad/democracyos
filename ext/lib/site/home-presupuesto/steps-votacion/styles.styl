.container
  @media screen and (max-width: 983px)
    margin-left: 5px !important

.ext-home-steps
  margin-bottom: 70px

  .p-mensaje
      font-size: 22px
      margin-top: 16px
      line-height: 28px
      letter-spacing: 1px
      font-weight: 300px
      text-align: center
      color: #818181
      background-color: #ffc8c0;
      border-radius: 6px;
      padding: 10px;
      a
        font-weight: 400
        color: #0066cc
      @media screen and (max-width: 980px)
        margin-left: 50px
       @media screen and (max-width: 575px)
        margin-left: 5px
        margin-right: 5px

  .color-link
    color: #32a7d3
    font-weight: bold

  h2
    font-weight: 400
    text-align: center
    width: 100%
    margin: 60px 0
    font-size: 2.5em
    color: #32a7d3
    letter-spacing: 1px

  .participa-steps
    width: 100%
    display: block
    padding: 0 15px
    @media screen and (max-width: 946px)
      padding: 0 20px
      margin-left: 20px
    @media screen and (min-width: 940px)
      display: flex
      justify-content: space-between

  .p-step
    display: block
    position: relative
    margin-bottom: 40px
    margin-left: auto
    margin-right: auto
    max-width: 400px
    text-align: center
    @media screen and (min-width: 940px)
      width: 230px
    @media screen and (min-width: 300px)
      margin-left: 50px

    @media screen and (min-width: 940px)
      margin-right: 40px

      &:first-child
        margin-left: 0

    &::before
      width: 0
      height: 0
      border-style: solid
      border-color: transparent transparent transparent #d8d8d8
      position: absolute
      right: -30px
      border-width: 10px 0 10px 20px
      top: 100px
      z-index: 9
      @media screen and (min-width: 990px)
        right: -60px
        border-width: 20px 0 20px 40px
      @media screen and (min-width: 940px)
        content: ""

    &:last-child::before
        content: none

    .p-text
      font-size: 22px
      margin-top: 16px
      line-height: 28px
      letter-spacing: 1px
      font-weight: 300
      text-align: center
      color: #818181
      a
        font-weight: 400
        color: #0066cc

    div
      position: relative

      .num
        color: white
        background: #3ba4ce
        padding: 8px 23px
        border-radius: 50%
        font-size: 30px
        position: absolute
        top: -10px
        left: -7px
        display: block
        @media screen and (max-width: 600px)
          font-size: 20px
          padding: 8px 16px
        @media screen and (min-width: 940px)
          display: block
        @media screen and (max-width: 940px)
          left: -60px
      p
        border-radius: 50%
        color: #818181
        font-size: 30px
        font-weight: 100
        display: flex
        align-items: center
        justify-content: center
        @media screen and (min-width: 940px)
          border: 5px solid #f7f7f7
          width: 225px
          height: 225px
        @media screen and (max-width: 400px)
          font-size: 23px
