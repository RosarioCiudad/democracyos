.presupuesto-topic-card
  width: 260px

  &.has-votes
    .budget
      color: #A5A9AA
      font-weight: 400

  &.proyectado
    .state
      background-color: #00adef

    .topic-card-info
      border-top-color: #00adef

  &.finalizado
    .state
      background-color: #30aa2d

    .topic-card-info
      border-top-color: #30aa2d

  &.ejecutandose
    .state
      background-color: #F39431

    .topic-card-info
      border-top-color: #F39431

  .topic-card-info
    border-top-color: #999
    position: relative

  .state
    z-index: 10
    position: absolute
    right: 0
    top: -107px
    padding: 7px 16px
    line-height: 1
    color: #fff
    font-size: 21px
    font-weight: 500
    background-color: #00adef

  .topic-results
    padding: 12px 15px 9px
    color: #00adef
    border-bottom: 1px solid #00adef

    h2,
    p
      margin: 0
      color: inherit
      text-transform: uppercase
      font-weight: 600

    h2
      font-size: 20px

    p
      font-size: 14px

  .topic-location
    color: #a5a9aa
    font-size: 13px
    margin-bottom: 0.8em

    i
      margin-right: .5em

  .number
    float: right

  .topic-card-title
    font-size: 1.125em

  .topic-card-body
    flex: 1

  .topic-card-footer
    text-align: right
    align-self: flex-end
    width: 100%
    position: relative

  .budget
    margin: 0
    color: #999
    font-weight: 900
    line-height: 1
    font-size: 24px

  .social-links
    position: absolute
    font-size: 20px

    span
      cursor: pointer
      margin-right: 7px
      color: #999

    .wp
      width: 25px
      height: 20px
      background-size: contain
      background-repeat: no-repeat
      display: inline-block
      margin-top: 0
      background-image: unquote("url('/ext/lib/site/topic-layout/whatsapp-logo-gris.svg')")
