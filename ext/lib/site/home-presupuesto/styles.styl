.ext-home-presupuesto
  @import './topic-card/styles'

  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .3)

  .topics-container
    position: relative
    display flex
    flex-wrap wrap
    justify-content center
    margin-bottom: 60px

  .cover
    display: flex
    align-items: center
    min-height: 500px
    margin-bottom: 60px
    padding: 15px 0
    color: #fff
    text-align: center
    background-size: cover
    background-repeat: no-repeat
    background-position: center center
    background-image: unquote("url('/ext/lib/site/home-presupuesto/cover.jpg')")

    h1
      margin: 0 0 40px
      font-size: 58px
      font-weight: 500
      line-height: 1.2
      text-shadow: 2px 2px 4px rgba(81, 81, 81, 0.8)

    label
      margin: 0 0 40px
      font-size: 24px
      font-weight: 500

  .distrito-filter
    .btn
      margin: 0 6px 12px
      width: 158px
      border-radius: 5px
      color: #fff
      border-color: #fff
      font-weight: 500
      box-shadow: none

      &:hover,
      &:active,
      &:focus,
      &.active
        outline: 0
        background-color: #00adef

      &.active
        border-color: #00adef
