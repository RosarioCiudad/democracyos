.ext-home-presupuesto
  @import './topic-grid/styles'
  @import './banner-presupuesto/styles'
  @import './filters-navbar/styles'
  @import './countdown/styles'
  @import '../home-multiforum/noticias/styles'


  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .8)

  .topics-container
    position: relative
    display flex
    flex-wrap wrap
    justify-content center

  .filters-wrapper
    margin: 0.8em 0
    padding: 0
    @media screen and (max-width: 425px)
      margin: 0 0 1.8em