.topic-card
  @import '../../../../lib/site/topic-layout/topic-article/poll/styles'

  display: block
  display: flex
  flex-direction: column
  z-index: 0
  position relative
  margin 15px
  width 350px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  color inherit
  background-color #fff
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')

  .topic-card-cover
    position relative
    width 100%
    border-bottom: 4px solid #00adef
    background-size cover
    background-color #efefef

    &:after
      content ''
      display block
      padding-top 50%

  .topic-info
    flex-grow: 2
    display: flex
    flex-direction: column
    padding: 15px

  .title
    margin: 0 0 .6em
    color: #444
    font-size: 1.5em
    font-weight: 400
    line-height: 1.1

    a
      padding-left: .3em
      font-size: .7em
      font-weight: 400
      color: #00adef

      &:hover
        color: #3dacf1
        text-decoration: underline


  .topic-card-footer-container
    width: 100%
    align-self: flex-end

  .topic-card-footer
    display: flex
    flex-wrap: wrap
    font-size: .9em
    padding-top: .8em
    width: 100%
    color: #a5a9aa

    .comments
      margin-right: auto
      margin-left: 0
      font-weight: 500
      a
        text-transform: uppercase
        color: #00adef

        &:hover
          color: #3dacf1

  .social-links
    position: absolute
    left: 15px
    bottom: 15px
    font-size: 20px

    span
      margin-right: 7px
      color: #999
