.desafios-topic-card
  width: 350px

  .topic-card-title
    margin-bottom: 110px

  .topic-card-footer-container
    width: 100%
    align-self: flex-end

  .topic-card-footer
    display: flex
    flex-wrap: wrap
    font-size: .9em
    padding-top: .8em
    width: 100%
    color: #a5a9aa

    .comments
      margin-right: auto
      margin-left: 0
      font-weight: 500
      a
        text-transform: uppercase
        color: #00adef
        position: absolute
        bottom: 10px


        &:hover
          color: #3dacf1

  .social-links
    position: absolute
    left: 15px
    bottom: 15px
    font-size: 20px

    span
      margin-right: 7px
      color: #999
