.ext-home-desafios
  @import './topic-card/styles'

  .topics-container
    position: relative
    display flex
    flex-wrap wrap
    justify-content center
    margin: 30px 0 60px

  .topics-filter 
    padding-top: 5px
    .filtrostatus
      border: 0
      margin-right: .5em
    .boton2030
      display:none

  .pp-nav2
    display: flex
    align-items: center
    flex-wrap: wrap
    margin: 40px auto
    justify-content: center
    .filtro2030
      font-size: 16px
      margin: 20px
      position: relative
      box-shadow: none
      border-radius: 5px
      font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
      width: 280px
      color: #333
      border-color: #676767
      &:hover,
      &:focus
        border-color: #676767
      &.active
        outline: 0
        border-color: #f59231
        color: #fff
        background-color: #f59231
    .filtrodesafios
      font-size: 16px
      margin: 20px
      position: relative
      box-shadow: none
      border-radius: 5px
      font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
      width: 280px
      color: #333
      border-color: #676767
      &:hover,
      &:focus
        border-color: #676767
      &.active
        outline: 0
        border-color: #00adef
        color: #fff
        background-color: #00adef
    .filtrosocultos
      display: none