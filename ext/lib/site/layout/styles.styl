body
  font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif

#outer-layout
  padding-top 0 !important

.container-simple
  margin-left: auto
  margin-right: auto
  padding-left: 15px
  padding-right: 15px

  @media (min-width: 544px)
    max-width: 576px

  @media (min-width: 768px)
    max-width: 720px

  @media (min-width: 992px)
    max-width: 940px

  @media (min-width: 1200px)
    max-width: 1140px
