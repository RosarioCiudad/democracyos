.modal-confirmation
    margin-left: -300px
    margin-top: -725px
    padding: 10px 10px
    width: 500px
    position: absolute
    left: 50%
    top: 50%
    background-color: #fff
    z-index: 99
    -webkit-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    -moz-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    @media screen and (max-width: 550px)
      width: 340px
      margin-left: -170px
    
    .close-modal
      padding: 2px 8px
      color: #1daeec
      border: 2px solid #1daeec
      border-radius: 50px
      text-align: center
      font-size: 18px
      font-weight: 400
      margin-right: -5px
      cursor: pointer 
      float: right
      &:hover
        color: #1daeec
        
    .confirmation-wrapper
        display: flex
        flex-wrap: wrap
        flex-direction: column
        text-align: center
        justify-content: center
        align-items: center
        padding: 15px
        .vote-img
            background-image: unquote("url('/ext/lib/site/topic-layout/topic-article/vote-modal/confirmacion/voto.svg')")
            height: 150px
            width: 180px
            margin-top: 20px
        .confirmation-title
            color: #15cd6c
            font-size: 36px
            font-weight: 500
            line-height: 1.1
            margin: 0
        .return
            color: rgba(0,0,0,0.5)
            cursor: pointer
            display: block
            font-weight: 200
            margin-top: 10px
            text-align: center
            text-decoration: underline
            width: 100%