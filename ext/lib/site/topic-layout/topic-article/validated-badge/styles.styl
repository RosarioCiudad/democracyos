.validated-badge
  display: inline-block
  vertical-align: middle
  margin-left: 8px
  position: relative
  flex: 100

  i
    color: #f7931d
    font-size: 15px
    border-radius: 50%
    padding: 2px 2px 2px 3px

  .validated-label
    position: absolute
    top: -1px
    left: 25px
    display: none

    span
      background: #ffa500
      color: #fff
      border-radius: 10px
      padding: 1px 10px 2px
      font-size: 12px
      white-space: nowrap
