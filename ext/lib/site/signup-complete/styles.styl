.ext-signup-complete
  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .3)

  .persona
    margin-left: 50px
  
  .iniciosesion
    display: contents
    align-items: center
    justify-content: center
    text-align: center

  .iniciobtn
    margin-top: 0px !important

  .linkforgot
    color: #3d699e !important
    font-weight: bold !important
    font-size: 16px !important
    cursor: pointer !important
    margin-left: 5px

  .linksolicita
    margin-left: 5px  

  form
    height: 100%
    display: flex
    flex-flow: column
    justify-content: space-around
    font-family: 'Droid Sans', 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
    margin: 0
          
    .form-header
      .title
        margin: 0 0 20px 0
        text-align: center
        font-weight: 500 // Roboto Medium
        font-size: 36px
        color: #1daeec
      p
        color: rgb(170, 170, 170)
        text-align: justify
        font-size: 16px
        line-height: 1.35
        margin: 20px 0

    .form-fields
      input,
      select,
      select.form-control:not([size]):not([multiple])
        height: auto
        padding: 10px 20px
        background-color: #e9e9e9
        border: none
        border-radius: 7px
        font-size: 18px
        color: rgb(105,105,105)
        &::placeholder
          color: #565656
        @media screen and (max-width: 550px)
          font-size: 16px
      .form-select-wrapper
        position: relative
        select
          cursor: pointer
        i
          pointer-events: none
          &::before
            position: absolute
            right: 1.7em
            top: 2.2em
            font-size: .45em
            content: '\25bc'
            transform: scale(2, 1)
            
      .field-sexo
        margin-bottom: 15px
      .field-cod-doc
        display: inline-block
        width: 25%    
      .field-nro-doc
        display: inline-block
        width: 70%
        float: left
        margin-left: 50px
        
    .form-actions
      display: flex
      flex-flow: column
      align-items: center
      .btn-modal
        width: 160px
        margin: 10px
        padding: 10px
        border: none
        border-radius: 7px
        background-color: #1daeec
        font-weight: bold
        font-size: 18px
        color: #fff
      .btn-modal-buscar
        width: 160px
        margin: 10px
        padding: 10px 50px
        border: none
        border-radius: 7px
        background-color: #1daeec
        font-weight: bold
        font-size: 18px
        color: #fff
      .complete-later
        text-align: center
        text-decoration: underline
        color: #f59231
        font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
        font-size: 14px
        font-weight: 400
