.ext-home-ideas
  @import './topic-card/styles'
  @import './cover/styles'

  .invita-consulta  
    max-width: 250px
    margin: 0 auto
    background-color: #294b68
    color: #fff
    padding-top: 20px
    padding-bottom: 0px
    padding-left: 30px
    padding-right: 30px
    text-align: center
    @media (max-width: 700px)
      display: none
    a
      display: inline-block
      img
        margin-bottom: 25px
        margin-top: 0px
        width: 150px


  .etiquetas
    h3
      margin: 0 0 10px 0
      font-size: 20px
      color: #666
      font-weight: 500

    .forum-tags
      font-size: 1.3em
      margin-bottom: 15px

      .badge
        margin: 0 .4em .4em 0
        &.active
          background: #ccc

  .escribir
    text-align: right
    margin-bottom: 10px
    

  .list-tools
    display: flex
    align-items: center
    justify-content: space-between
    margin: 2em 0 1em
    
  .topics-filter 
    padding-top: 5px
    .filtrostatus
      border: 0
      margin-right: .5em
    .boton2030
      display:none

  .pp-nav2
    display: flex
    align-items: center
    flex-wrap: wrap
    margin: 40px auto
    justify-content: center
    .filtro2030
      font-size: 16px
      margin: 20px
      position: relative
      box-shadow: none
      border-radius: 5px
      font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
      width: 280px
      color: #333
      border-color: #676767
      &:hover,
      &:focus
        border-color: #676767
      &.active
        outline: 0
        border-color: #f59231
        color: #fff
        background-color: #f59231
    
    .filtrosocultos
      display: none

    .filtroideas
      font-size: 16px
      margin: 20px
      position: relative
      box-shadow: none
      border-radius: 5px
      font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
      width: 280px
      color: #333
      border-color: #676767
      &:hover,
      &:focus
        border-color: #676767
      &.active
        outline: 0
        border-color: #0066cc
        color: #fff
        background-color: #0066cc
  



  .more-topics
    width: 100%
    padding: 0 0 20px 0
    text-align: center
    button
      cursor: pointer
      margin: 6px
      border-radius: 6px
      padding: 0.8rem
      background-color: #0066cc
      color: #fff
      border: none
      font-size: 20px
      text-transform: uppercase