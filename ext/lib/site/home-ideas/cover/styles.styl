.ext-home-cover
  z-index: 10
  display: flex
  position: relative
  padding: 1em 0
  align-items: center
  color: #fff
  font-size: .8em
  text-align: center
  background-size: cover
  background-repeat: no-repeat
  background-position: center center
  @media (min-width: 768px)
    text-align: left
    font-size: 1em
  @media screen and (min-height: 600px)
    padding-top: 7.5em
    padding-bottom: 2.5em
  
  .container
    position: relative
    z-index: 10
    max-width: 1140px
    @media (min-width: 768px)
      display: flex
      flex-direction: row
      align-items: center
      justify-content: center
      padding-bottom: 40px


    .ext-site-cover-isologo
      width: 8em
      border-radius: 50%
      box-shadow: 2px 2px 4px rgba(81, 81, 81, .4)
      background-size: 75%
      background-color: #0066cc
      background-repeat: no-repeat
      background-position: center center
      @media (max-width: 768px)
        margin: auto

      &:after
        content: ' '
        display: block
        padding-top: 100%

  h1
    font-size: 3em
    margin: 0 0
    text-shadow: 2px 2px 4px rgba(81, 81, 81, .8)
  
  h2
    margin: 0
    max-width: 560px
    font-size: 1.5em
    line-height: 1.2
    font-weight: 400
    text-shadow: 2px 2px 4px rgba(81, 81, 81, .8)

  .banner
    display: none
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    align-items: center
    justify-content: center
    pointer-events: none
    z-index: 5

    @media screen and (min-width: 768px)
      display: flex

  .video
    width: 100%
    position: relative
    height: 100%
    overflow: hidden
    display: flex
    justify-content: center
    align-items: center

    video
      width: 100%
      min-width: 1000px
      z-index: -1


@css {
  @-webkit-keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-30px); }
    60% { transform: translateY(-15px); }
  }

  @-moz-keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-30px); }
    60% { transform: translateY(-15px); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-30px); }
    60% { transform: translateY(-15px); }
  }
}
