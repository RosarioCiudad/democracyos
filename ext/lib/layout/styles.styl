body
  font-family: 'Raleway', sans-serif
  overflow: auto

#root
  padding-top: 0

#outer-layout
  padding-top: 0
  overflow: inherit

.btn
  border-radius: 6px !important


.btn-primary
  background-color: #0066cc !important
  border-radius: 6px !important
  border: 2px solid #0066cc !important

.container-simple
  margin-left: auto
  margin-right: auto
  padding-left: 15px
  padding-right: 15px

  @media (min-width: 544px)
    max-width: 576px

  @media (min-width: 768px)
    max-width: 720px

  @media (min-width: 992px)
    max-width: 940px

  @media (min-width: 1200px)
    max-width: 1140px

.site-content
  margin-top: 0

.badge.badge-default
  background-color: #A2A4A7
