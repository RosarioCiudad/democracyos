@import './update-stage/styles'


.filanuevo
  margin-bottom: 20px !important

.barrapp
  background-color: #FFF
  margin-bottom: 5px
  padding-bottom: 5px
  border:none
.barrabuscar
  margin-bottom: 0px
  border-bottom: none

.export-year
  color: #777
  font-size: 12px
  position: absolute
  top: 300px
  right: 26px
  @media (max-width: 991px)
  	top: 350px
  @media (max-width: 425px)
  	top: 455px
  	left: 26px
