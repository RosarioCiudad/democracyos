    top: 470px


.titulo
    width: 100%
    margin-top: 5px
    margin-bottom: 5px
    padding: auto
    h4
      margin-top: 0px
      margin-bottom: 10px
      font-size: 16

.topic-title
  font-size: 18px

.filtros
  border-top: none

.filtro-label
  font-size: 16px
  font-weight: normal
  line-height: 1.4
  margin-right: 10px
